
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="center">
                <h1>Welcome!</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Show the data on a page: @Html.ActionLink("Data", "Data", "Faculty")</h3>
            <h3>Add classes to the database: @Html.ActionLink("Add Classes", "Add", "Faculty")</h3>
            <h3>Show all the classes in the system: @Html.ActionLink("Classes", "Class", "Faculty")</h3>
        </div>
        <div class="col-md-6">
            <div class="center">
                <img src="~/Images/mathheart.jpg" style="height:175px;" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="center">
                <form method="post">
                    <h3>
                        <button name="download" value="1" type="submit">Download the Data</button>
                    </h3>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <h3>
            This button is to be used at the end of the term to clear the database for the next one. Don't worry,
            it's not a commitment, it will just take you to another page.
        </h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="center">
                <form method="post">
                    <h3>
                        <button name="download" value="2" type="submit">Reset the Data</button>
                    </h3>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="center">
                <form method="post">
                    <h3>
                        <button name="download" value="3" type="submit">Go Back to Sign In</button>
                    </h3>
                </form>
            </div>
        </div>
    </div>
</div>