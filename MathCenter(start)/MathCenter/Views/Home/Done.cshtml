@model MathCenter.Models.Student
@{
    ViewBag.Title = "Done";
}

<div class="container">
    <form method="post">
        <div class="center">

            <div class="row">
                <h2>Is this you?</h2>
                <h3 style="color: #DB0A29;">@Html.DisplayFor(m => m.FirstName)&nbsp;@Html.DisplayFor(m => m.LastName)</h3>      
                <h3><button type="submit" name="approved" value="0">No</button></h3>
            </div>
            <div class="row">
                <h2>Which class are you here for?</h2>
                <div class="center">
                    <h4 style="color: darkblue;">@ViewBag.ClassError</h4>
                </div>
            </div>
        </div>
        @foreach (var modelClass in Model.Classes)
        {
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h3 style="color: #DB0A29;"><input type="radio" name="classID" style="height:15px;" value="@Html.DisplayFor(m => modelClass.ClassID)">@Html.DisplayFor(m => modelClass.DeptPrefix)&nbsp;@Html.DisplayFor(m => modelClass.ClassNum)&nbsp;@Html.DisplayFor(m => modelClass.Instructor)&nbsp;@Html.DisplayFor(m => modelClass.Other)</h3>
                </div>
                <br />
            </div>
        }
        <div class="row">
            <div class="center">
                <h2>Can't find your class? Add another.</h2>
                <h3><button type="submit" name="approved" value="3">Add Another</button></h3>
            </div>
        </div>
        <div class="row">
            <div class="center">
                <h3>
                    <input type="hidden" name="Week" value=@ViewBag.Week />
                    <input type="hidden" name="VNum" value=@ViewBag.VNum />
                    <button type="submit" name="approved" value="1">Continue</button>
                    <button type="submit" name="approved" value="2">Go Back</button>
                </h3>
            </div>
            <div class="center">
                <h4 style="color: darkblue;">@ViewBag.Error</h4>
            </div>
        </div>
    </form>
</div>