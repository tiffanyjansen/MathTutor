<div class="content">
    @if (ViewBag.Error != null)
    {
        @Html.Partial("_Errors", "Partials", new ViewDataDictionary { { "error", ViewBag.Error } })
    }
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-6 col-12">
                <h2>Tutors:</h2>                
                <div class="row form-group">
                    <div class="col-md-4 text-md-right col-12">
                        <label class="h4">Password:</label>
                    </div>
                    <div class="col-md-8 col-12">
                        <input class="form-control" type="password" name="tutorPwd" />
                    </div>
                </div>
                <div class="row justify-content-center form-group">
                    <div class="col-12 text-center">
                        <button class="btn btn-lg btn-danger" type="submit" name="button" value="tutor">
                            <span class="oi oi-media-play" title="media-play" aria-hidden="true"></span> Submit
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-12">
                <h2>Faculty:</h2>
                <div class="row form-group">
                    <div class="col-md-4 text-md-right col-12">
                        <label class="h4">Password:</label>
                    </div>
                    <div class="col-md-8 col-12">
                        <input class="form-control" type="password" name="facultyPwd" />
                    </div>
                </div>
                <div class="row justify-content-center form-group">
                    <div class="col-12 text-center">
                        <button class="btn btn-lg btn-danger" type="submit" name="button" value="faculty">
                            <span class="oi oi-play-circle" title="play-circle" aria-hidden="true"></span> Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-12 text-center">
            <h4><span class="oi oi-heart red-text" title="heart" aria-hidden="true"></span>&nbsp;"The only way to learn mathematics is to do mathematics." ~Paul Halmos&nbsp;<span class="oi oi-heart red-text" title="heart" aria-hidden="true"></span></h4>
        </div>
    </div>
</div>