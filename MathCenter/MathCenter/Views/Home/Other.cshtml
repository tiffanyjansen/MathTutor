
@model IEnumerable<MathCenter.Models.Class>

    <div class="content">
        @Html.Partial("_Progress", "Partials", new ViewDataDictionary { { "progress", 66 } })

        @if (ViewBag.Error != null)
        {
            @Html.Partial("_Errors", "Partials", new ViewDataDictionary { { "error", ViewBag.Error } })
        }
        @if (Model.Count() > 0)
        {
            <div class="row">
                <div class="col-12 border-bottom">
                    <h2>Please select your classes:</h2>
                </div>
            </div>
            using (Html.BeginForm("Other", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-12">
                        <table>
                            <thead>
                                <tr>
                                    <th>Selected</th>
                                    <th>Class</th>
                                    @if (Model.Count() > 1)
                                    {
                                        <th>Selected</th>
                                        <th>Class</th>
                                    }
                                    @if (Model.Count() > 2)
                                    {
                                        <th>Selected</th>
                                        <th>Class</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int total = Model.Count();
                                    for (int i = 0; i < total; i++)
                                    {
                                        <tr>
                                            @while (i % 3 != 2)
                                            {
                                                <td>
                                                    <input type="checkbox" class="class-checkbox" name="Classes" value="@Model.Skip(i).First().ClassID" />
                                                </td>
                                                i++;
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

        }
        <div class="row">
            <div class="col-12 border-bottom">
                @if (Model.Count() > 0)
                {
                    <h2>Class not here? You can add a new one here:</h2>
                }
                else
                {
                    <h2>Add your class here:</h2>
                }
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10">
                <h3>Example: If you are in BA 100, type BA 100.</h3>
                <h3>Example: If you are in MTH 300, type MTH 300.</h3>
            </div>
        </div>
        @using (Html.BeginForm("Other", "Home", FormMethod.Get))
        {
            <div class="row form-group justify-content-center">
                <div class="col-8">
                    <input type="text" name="other" class="form-control" placeholder="MTH 111" />
                </div>
            </div>
            <div class="row form-group justify-content-center">
                <div class="col-8 text-right">
                    <button class="btn btn-danger btn-lg" type="submit">Submit</button>
                </div>
            </div>
        }
    </div>