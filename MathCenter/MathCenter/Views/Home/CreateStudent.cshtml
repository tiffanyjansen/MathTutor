@model MathCenter.Models.Student

@{
    ViewBag.Title = "CreateStudent";
}

<h1>Please Enter Your Name Below:</h1>

<div class="center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.VNum,
                    new { id = "VNum", Value = ViewBag.Id })

            <div class="form-group">
                <h3>

                    First Name @Html.TextBoxFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </h3>
            </div>

            <div class="form-group">
                <h3>
                    Last Name @Html.TextBoxFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </h3>
            </div>
            <div class="form-group">
                <h3>
                    <button type="submit" style="width: 125px;">Submit</button>
                </h3>
            </div>
        </div>
    }
</div>
