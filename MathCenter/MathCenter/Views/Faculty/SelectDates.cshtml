<div class="content">
    <h2 class="border-bottom">Please select date range for the download:</h2>
    @if (ViewBag.Error != null)
    {
        @Html.Partial("_Errors", "Partials", new ViewDataDictionary { { "error", ViewBag.Error } })
    }
    @using (Html.BeginForm())
    {
        <div class="row form-group">
            <div class="col-md-6">
                <label class="h4">Start Date:</label>
                <div class="input-group">
                    <input data-provide="datepicker" class="datepicker form-control" autocomplete="off" name="start" type="text" placeholder="mm/dd/yyy" id="start" />
                    <div class="input-group-append">
                        <span class="input-group-text oi oi-calendar red-text"></span>
                    </div>
                </div>
                
            </div>
            <div class="col-md-6">
                <label class="h4">End Date:</label>
                <div class="input-group">
                    <input data-provide="datepicker" name="end" class="datepicker form-control" autocomplete="off" placeholder="mm/dd/yyy" id="end" />
                    <div class="input-group-append">
                        <span class="input-group-text oi oi-calendar red-text"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-12 text-center">
                <input class="btn btn-lg btn-danger" type="submit" value="Submit"/>
                @Html.ActionLink("Go Back", "Index", "Faculty", null, new { @class = "btn btn-default btn-lg" })
            </div>
        </div>
    }
</div>

@section scripts 
{
    <script type="text/javascript">
        $('#start').datepicker({
            maxViewMode: 0
        });
        $('#end').datepicker({
            maxViewMode: 0
        });
    </script>
}