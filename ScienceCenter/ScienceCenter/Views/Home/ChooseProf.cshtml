@model IEnumerable<ScienceCenter.Models.Class>
@{
    ViewBag.Title = "ChooseProf";
}

<div class="container">
    <h1>Please select your professor:</h1>
    <div class="center">
        <form method="post">            
            <h3 style="color: #0D0A0B;">
                <select name="Prof">

                    @foreach (var item in Model)
                    {
                        <option value="@Html.DisplayFor(modelItem => item.Instructor)">@Html.DisplayFor(modelItem => item.Instructor)</option>
                    }
                    <option value="PCC">Portland Community College</option>
                    <option value="ChCC">Chemeketa Community College</option>
                    <option value="ClCC">Clackamas Community College</option>
                    <option value="MHCC">Mount Hood Community College</option>
                    <option value="LBCC">Linn-Benton Community College</option>
                </select>
                <input type="hidden" name="WeekNum" value=@ViewBag.WeekNum />
                <input type="hidden" name="Id" value=@ViewBag.Id />
                <input type="hidden" name="dept" value=@ViewBag.Dept />
                <input type="hidden" name="classN" value=@ViewBag.cNum />
                <button type="submit">Submit</button>
            </h3>
        </form>
    </div>
</div>

